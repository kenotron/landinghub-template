{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/product.schema.json",
  "title": "Product",
  "description": "A product in the catalog",
  "type": "object",
  "properties": {
    "title": {
      "description": "To be stuffed inside <title> tag",
      "type": "string"
    },
    "keywords": {
      "description": "Keywords for SEO",
      "type": "string"
    },
    "sections": {
      "description": "A collection of sections or blocks that makes up the page",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "description": "Hero block, style A",
            "properties": {
              "hero": {
                "const": "a"
              },
              "heading": {
                "type": "string"
              }
            },
            "required": ["hero", "header"]
          },

          {
            "type": "object",
            "properties": {
              "hero": {
                "const": 2
              },
              "header": {
                "type": "string"
              }
            },
            "required": ["hero", "header"]
          },

          {
            "type": "object",
            "properties": {
              "header": {
                "type": "string"
              }
            },
            "required": ["header"]
          }
        ]
      }
    }
  },
  "required": ["title", "sections"]
}
