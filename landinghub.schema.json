{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/product.schema.json",
  "title": "LandingHub Page",
  "description": "A landinghub.io page",
  "type": "object",
  "properties": {
    "title": {
      "description": "To be stuffed inside <title> tag",
      "type": "string"
    },
    "keywords": {
      "description": "Keywords for SEO",
      "type": "string"
    },

    "color": {
      "description": "Primary color",
      "type": "string",
      "oneOf": [{ "const": "blue" }, { "const": "red" }]
    },
    "sections": {
      "description": "A collection of sections or blocks that makes up the page",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "description": "Hero block, style A",
            "properties": {
              "hero": {
                "const": "a"
              },
              "heading": {
                "type": "string"
              },
              "subheading": {
                "type": "string"
              },
              "actions": {
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "type": "object",
                      "properties": {
                        "primary": {
                          "type": "string"
                        },
                        "link": {
                          "type": "string"
                        }
                      },
                      "required": ["primary", "link"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "secondary": {
                          "type": "string"
                        },
                        "link": {
                          "type": "string"
                        }
                      },
                      "required": ["secondary", "link"]
                    }
                  ]
                }
              },
              "image": {
                "type": "string"
              }
            },
            "required": ["hero", "heading", "subheading"]
          },

          {
            "type": "object",
            "properties": {
              "header": {
                "type": "string"
              }
            },
            "required": ["header"]
          }
        ]
      }
    }
  },
  "required": ["title", "sections", "color"]
}
